<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 顶部操作区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">
         <!-- thresh 区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thr:"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginEnd="-2dp"/>

            <SeekBar
                android:id="@+id/threshold_seek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="45" />

            <TextView
                android:id="@+id/tv_thr_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.45"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginStart="-2dp"/>
        </LinearLayout>
        <!-- nms 区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nms:"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginEnd="-2dp"/>
            <SeekBar
                android:id="@+id/nms_seek"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"/>
            <TextView
                android:id="@+id/tv_nms_val"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.65"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginStart="-2dp"/>
        </LinearLayout>
    </LinearLayout>
    
    <!-- 功能按钮区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">
        <!-- 监控信息显示区：All -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_func_bg_bold"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_all_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:text="All"
                android:textColor="#B22222"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- 数据区，占下半部分 -->
            <TextView
                android:id="@+id/tv_all_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:text="96ms"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!-- 监控信息显示区：Infer-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_func_bg_bold"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">
            <!-- 标题  -->
            <TextView
                android:id="@+id/tv_infer_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:text="Infer"
                android:textColor="#B22222"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- 数据区 -->
            <TextView
                android:id="@+id/tv_infer_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:text="25ms"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 监控信息显示区：FPS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_func_bg_bold"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <!-- 标题  -->
            <TextView
                android:id="@+id/tv_fps_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:text="FPS"
                android:textColor="#B22222"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- 数据区，占下半部分 -->
            <TextView
                android:id="@+id/tv_fps_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:text="54"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- 监控信息显示区：CPU -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="@drawable/btn_func_bg_bold"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">
            <!-- 标题，靠上四分之一 -->
            <TextView
                android:id="@+id/tv_cpu_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:text="CPU"
                android:textColor="#B22222"
                android:textSize="12sp"
                android:textStyle="bold" />
            <!-- 数据区，占下半部分 -->
            <TextView
                android:id="@+id/tv_cpu_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center_horizontal"
                android:text="120%"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Track和Shader用Switch美化 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_track"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:background="@null"
                    android:button="@drawable/checkbox_square_track" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Track"
                    android:textColor="#B22222"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_shader"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:background="@null"
                    android:button="@drawable/checkbox_square_track" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shader"
                    android:textColor="#B22222"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 预览区 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="1.2"
        android:layout_marginTop="5dp">
        <SurfaceView
            android:id="@+id/view_finder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:visibility="gone" />
    </FrameLayout>
    <!-- 底部区块：日志区+模型输入区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:orientation="vertical">
        <!-- 日志区 -->
        <TextView
            android:id="@+id/tv_log"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="#FFFFFF"
            android:ellipsize="end"
            android:gravity="start|top"
            android:maxLines="3"
            android:padding="6dp"
            android:scrollbars="vertical"
            android:textColor="#222222"
            android:textSize="13sp" />
        <!-- 操作按钮区 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_input_label"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="6dp"
                android:gravity="center_vertical"
                android:text="模型输入："
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.66"
                android:background="@drawable/bg_input_rounded"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageButton
                    android:id="@+id/btn_input_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="图片输入"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_input_image" />

                <ImageButton
                    android:id="@+id/btn_input_video"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="视频输入"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_input_video" />

                <ImageButton
                    android:id="@+id/btn_input_camera"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="拍照输入"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_input_camera" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
