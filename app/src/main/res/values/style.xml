<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Spinner样式 -->
    <style name="CustomSpinnerStyle">
        <item name="android:background">@drawable/spinner_with_arrow</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:popupBackground">#80FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <!-- 提示词文本样式 -->
    <style name="LabelTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <!-- 主按钮样式 -->
    <style name="PrimaryButtonStyle">
        <item name="android:background">@drawable/btn_outline</item>
        <item name="android:textColor">#FF3333</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>